<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ユーザー情報</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">新しい投稿</h2>
      <%= render 'posts/form', post: @post %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>投稿一覧</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>内容</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to user_path(post.user) do %>
                <%= attachment_image_tag(post.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
                <% end %>
              </td>
              <td><%= link_to post.title, post_path(post), class: "post_#{post.id}" %></td>
              <td><%= post.body %></td>
              <td id="favorite_buttons_<%= post.id %>">
                <%= render 'favorites/favorite', post: post %>
              </td>
              <td>コメント数：<%= post.comments.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>