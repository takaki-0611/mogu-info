<div class="container">
  <div class="col-xs-12">
    <% if @model == "user" %>
    <h3 class="heading">ユーザー search for '<%= @value %>'</h3>
    <table class="table">
        <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>Introduction</th>
            </tr>
        </thead>
    <% @datas.each do |user| %>
        <tbody>
            <tr>
                <th>
                    <%= attachment_image_tag(user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40') %>
                </th>
                <th>
                  <%= user.name %>
                </th>
                <th>
                    <%= user.introduction %>
                </th>
            </tr>
        </tbody>
    <% end %>
    <% elsif @model == "post" %>
    <h3 class="heading">投稿 search for '<%= @value %>'</h3>
    <table class="table">
        <thead>
            <tr>
              <th></th>
              <th>タイトル</th>
              <th>内容</th>
            </tr>
        </thead>
        <% @datas.each do |post| %>
        <tbody>
            <tr>
                <th>
                    <%= attachment_image_tag(post.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40') %>
                </th>
                <th>
                    <%= post.title %>
                </th>
                <th>
                    <%= post.body %>
                </th>
            </tr>
        </tbody>
        <% end %>
    <% end %>
    </table>
  </div>
</div>